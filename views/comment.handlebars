<section class="card homepage">
  <div class="card-header" id="title">
    <div class="title">
      <h2 class="no-line"><a href="/blog/{{id}}">{{title}}</a></h2>
    </div>
    <div>
      <p>posted by {{user.username}} on {{format_date created_at}}</p>
    </div>
  </div>
  <div class="card-body">
      <p>{{content}}</p>
  </div>
  {{#each comments as |comment|}}
  <div >
    {{!-- <d class="card-header"></d> --}}
    <div class="card-body">
      <p>{{comment_text}}</p>
      <div>
        <p>~ posted by {{user.username}} on {{format_date created_at}}</p>
      </div>
    </div>
  </div>
  
  {{/each}}

   {{#if logged_in}}
<form class="card-body">
    <div>
        <label class="form-label">Comment</label>
        <textarea class="form-textarea form-input" name="comment-text" id="comment-text"></textarea>
    </div>
    <button class="btn" id="comment-btn">Submit</button>
</form>
{{/if}}
</section>


<script src="/JS/comment.js"></script>
