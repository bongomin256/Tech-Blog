<div class="col-md-6 card" id="login-form">
    <h2 class="card-header">Login</h2>

    <form class="form login-form card-body">
      <div class="form-group">
        <label class="form-label" for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" placeholder="bongo@bongo.com" />
      </div>
      <div class="form-group">
        <label class="form-label" for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" placeholder="Password"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
      <a href="/signup">Sign Up in instead</a>
    </form>
    
  </div>

  <script src="./public/JS/login.js"></script>